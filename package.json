{
    "name": "portfolie",
    "version": "0.0.0",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "fix": "npm run fix:prettier && npm run fix:stylelint",
        "fix:prettier": "prettier --write src/**/*.ts",
        "fix:stylelint": "stylelint src/**/*.scss --fix",
        "preview": "vite preview",
        "validate": "npm run validate:prettier && npm run validate:stylelint",
        "validate:prettier": "prettier --check src/**/*.ts",
        "validate:stylelint": "stylelint src/**/*.scss"
    },
    "dependencies": {
        "i18next": "^21.6.7",
        "normalize.css": "^8.0.1",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-hook-form": "^7.25.0",
        "react-i18next": "^11.15.3",
        "sass": "^1.49.0"
    },
    "devDependencies": {
        "@vitejs/plugin-react": "^1.0.7",
        "postcss-scss": "^4.0.3",
        "prettier": "^2.5.1",
        "stylelint": "^14.3.0",
        "stylelint-config-recess-order": "^3.0.0",
        "stylelint-config-standard": "^24.0.0",
        "stylelint-order": "^5.0.0",
        "vite": "^2.7.2"
    }
}
